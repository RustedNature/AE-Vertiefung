<Window x:Class="_08_WP_T_F_Einstieg.Menue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_WP_T_F_Einstieg"
        mc:Ignorable="d"
        Title="Menue" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top" Background="PaleGoldenrod">
            <MenuItem Header="File">
                <MenuItem Header="New" Icon="N" />
                <MenuItem Header="Open" Icon="O" />
                <MenuItem Header="Save" Icon="S" />
                <Separator />
                <MenuItem Header="Close" Icon="C"  Name="Close" Click="Close_Click" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>