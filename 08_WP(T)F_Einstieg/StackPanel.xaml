        <Label Width="150" Background="Thistle" />
        <Label Width="150" Background="BurlyWood" />
        <Label Width="150" Background="NavajoWhite" />
        <Label Width="150" Background="DodgerBlue" HorizontalAlignment="Left" />
        <Label Width="160" Background="Turquoise" HorizontalAlignment="Right" />
        <Label  Background="OrangeRed" HorizontalContentAlignment="Center" />
        <Label  Height="5" Width="150" Background="Gold" />
        <Button Height="50" Width="750"  Name="BTN_Close" Content="Close" Click="BTN_Close_Click" />
        <Button Height="50" Content="test" HorizontalAlignment="Stretch" Background="BlanchedAlmond" />
