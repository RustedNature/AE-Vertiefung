        <Label Height="25" Width="150" Background="AntiqueWhite" />
        <Label Width="150" Background="Black" />
        <Label Width="150" Background="Green" />
        <Label Height="85" Width="150" Background="LemonChiffon" />
        <Label Width="150" Background="Violet" />
        <Label Width="150" Background="PaleGoldenrod" />
